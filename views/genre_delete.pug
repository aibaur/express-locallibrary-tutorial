extends layout

block content

  h3.text-primary #{title}: #{genre.name}

  if genre_books.length

    p #[strong Delete the following books before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4.text-secondary Books:
      dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p #[strong Do you really want to delete this Genre?]

    form(method='POST')
      div.form-group
        input#genre_id.form-control(type='hidden', name='genre_id', value=genre._id )

      button.btn.btn-primary(type='submit') Delete